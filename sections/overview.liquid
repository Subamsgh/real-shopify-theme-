<div class="repo-cstm-ptrn">
  <div class="repo-cstm-child">{% render 'custom-menu' %}</div>
  <div class="repo-cstm-child-1 report-overiew">
    <div class="box-blog1-outer">
      <h2 class="box-blog1 heading">{{ section.settings.main-heading-001 }}</h2>
      <ul class="ordered-list-report-overiew">
        {% for block in section.blocks %}
          {% if block.type == "text" %}
        <li class="list-repop-prt">
          {{ block.settings.list-heading-09 }}
          <div class="list-repop-link"><a href="{{ block.settings.list-view-url }}">View</a><a href="{{ block.settings.list-view-url }}">Download</a></div>
        </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
    <div class="box-blog2">
      {% for block in section.blocks %}
        {% if block.type == "image" %}
        <div class="box-blog2-inner">
          <div><img src="{{ block.settings.img_overiew_logo | image_url }}" width="51" height="53"></div>
          <h3><a href="{{ block.settings.overiew_url_logo }}" class="box-blog-iner-anchor">{{ block.settings.overiew-txt-heading }}</a></h3>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Investor Report",
  "settings": [
    {
      "type": "text",
      "id": "main-heading-001",
      "label": "Enter The Heading",
      "default":"Whatâ€™s New"
    }
  ],
  "blocks": [
    {
     "name":"text",
     "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "list-heading-09",
          "label": "list content"
        },
        {
          "type": "url",
          "id": "list-view-url",
          "label": "Enter The File URl"
        }
      ]
    },
    {
      "name":"image",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id":"img_overiew_logo",
          "label":"select logo"
        },
        {
          "type": "url",
          "id": "overiew_url_logo",
          "label": "Select URl"
        },
        {
          "type": "text",
          "id": "overiew-txt-heading",
          "label": "Enter The Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Add Inverstor Report"
    }
  ]
}
{% endschema %}

