<!--term and condition-->
<div class="tc-hero">
  <div class="tc-hero-container"><h1 class="tc-hero-heading">{{ section.settings.t-c-main-heading }}</h1></div>
  {% for block in section.blocks %}
    <div class="tc-section">
      <div class="w-richheading">
        <h2>{{ block.settings['tc-main-headig'] }}</h2>
      </div>
      <div class="w-richpraragraph">
        <p>
          {{ block.settings['tc-main-paragrph'] }}
        </p>
      </div>
    </div>
  {% endfor %}
</div>
<style>
.tc-section {
  width: 90%;
  max-width: 1500px;
  margin: auto;
}
.w-richpraragraph > p {
  color: #868686;
  letter-spacing: 0.3px;
  margin-bottom: 33px;
  font-size: 16px;
  line-height: 1.8;
}
.w-richheading > h2 {
  color: #fff;
  letter-spacing: 5px;
  text-transform: uppercase;
  margin-top: 20px;
  margin-bottom: -20px;
  font-size: 23px;
  font-weight: 400;
  line-height: 1.3;
}
.tc-hero-heading {
  color: #fff;
  letter-spacing: 9px;
  font-family: brother-xs, sans-serif;
  font-size: 40px;
  font-weight: 400;
  line-height: 1;

  padding-top: 6%;
  width: 90%;
  max-width: 1500px;
  margin: auto;
  padding-bottom: 3%;
  text-transform: uppercase;
}
.tc-hero-container {
  background: rgb(10 10 10 / 73%);
}
.tc-hero {
  background: #181818;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.w-richpraragraph > ul {
  color: #8b8b8b;
  margin-top: 0;
  margin-bottom: 10px;
  padding-left: 13px;
  font-size: 16px;
  line-height: 1.8;
  list-style-type: none;
}
.w-richpraragraph > ul > li {
  margin-bottom: 7px;
  line-height: 1.9;
  font-size: 16px;
}
@media only screen and (min-width: 321px) and (max-width: 768px) {
  .w-richpraragraph > ul {
    list-style-type: disc;
  }
  .tc-hero-heading {
    padding-top: 80px;
    padding-bottom: 30px;
  }
}
   
</style>
{% schema %}
{
  "name": "Term And Condition",
  "tag": "section",
  "class": "term-condition-qw",
  "settings": [
    {
      "type": "html",
      "id": "t-c-main-heading",
      "label": "Heading",
      "default":"Terms and conditions"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name":"block",
      "settings": [
        {
          "type": "html",
          "id": "tc-main-headig",
          "label": "Heading"
        },
                {
          "type": "html",
          "id": "tc-main-paragrph",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Add Term And Condition"
    }
  ]
}
{% endschema %}
